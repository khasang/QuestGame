@{
    var user = Session["User"] as QuestGame.WebApi.Models.UserModel;

    if (user != null)
    {
        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Здравствуйте, " + user.UserName + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", id = "userName" })
            </li>
            <li>
                @Html.ActionLink("Выйти", "LogOff")
            </li>
        </ul>
    }
    else
    {
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Регистрация", "Register", "Home", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
            <li>@Html.ActionLink("Выполнить вход", "Login", "Home", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        </ul>
    }
}
