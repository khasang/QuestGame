@model QuestGame.WebApi.Areas.Game.Models.StageViewModel
@using QuestGame.WebApi.Helpers

@{
    ViewBag.Title = "Details";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-heading"><h2>Подробно</h2></div>
        <div class="btn-group">
            @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary btn-lg" })
            @*@Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-default btn-lg" })*@
            <a class="btn btn-default btn-lg" href="@ViewBag.ReturnUrl">Назад</a>
        </div>
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Body)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Body)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Point)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Point)
            </dd>  
        </dl>

    </div>
</div>

@if (Model.Motions.Count > 0)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-heading"><h2>Сцены</h2></div>
            @Html.ActionLink("Добавить действие", "Create", "Motion", new { area = "Design", id = @Model.Id }, new { @class = "btn btn-primary btn-lg" })
        </div>
        <div class="panel-body">
            <table class="table table-hover table-bordered">
                <tr>
                    <th>Название</th>
                    <th>Действие</th>
                </tr>
                @foreach (var motion in Model.Motions)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => motion.Value)
                        </td>
                        <td>
                            <a href=@Url.Action("Details", "Motion", new { id = motion.Key }, null)><span class="glyphicon glyphicon-info-sign"></span></a>
                            <a href=@Url.Action("Edit", "Motion", new { id = motion.Key }, null)><span class="glyphicon glyphicon-pencil"></span></a>
                            <a href=@Url.Action("Delete", "Motion", new { id = motion.Key }, null)><span class="glyphicon glyphicon-remove-circle"></span></a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
}

