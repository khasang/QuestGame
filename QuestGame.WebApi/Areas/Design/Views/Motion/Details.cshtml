@model QuestGame.WebApi.Areas.Game.Models.MotionViewModel
@using QuestGame.WebApi.Helpers

@{
    ViewBag.Title = "Details";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-heading"><h2>Подробно</h2></div>
        <div class="btn-group">
            @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Назад", "Details", "Stage", new { id = Model.OwnerStageId }, new { @class = "btn btn-default" })
        </div>
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.NextStageId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NextStageId)
            </dd>
            <dd>
                <div class="pull-left" style="margin-right: 10px">
                    <img class="img-thumbnail" width="750" height="750"
                         src="@Model.Image"/>
                </div>
            </dd>
        </dl>
    </div>
</div>
