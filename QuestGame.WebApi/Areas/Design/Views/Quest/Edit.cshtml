@model QuestGame.WebApi.Areas.Game.Models.QuestViewModel

@{
    ViewBag.Title = "EditQuest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading"><h2>Редактирование квеста</h2></div>
        <div class="panel-body">
            
            @using (Html.BeginForm("Edit", "Quest", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(x => x.Id)
                @Html.HiddenFor(x => x.Stages)
                @Html.HiddenFor(x => x.Owner)
                @Html.HiddenFor(x => x.Rate)
                @Html.HiddenFor(x => x.Date)

                <div class="form-group">
                    <label class="col-sm-2 control-label">@Html.DisplayNameFor(n => n.Title)</label>
                    @Html.EditorFor(t => t.Title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(v => v.Title)
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@Html.DisplayNameFor(n => n.Date)</label>
                    @Html.DisplayTextFor(t => t.Date)
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@Html.DisplayNameFor(n => n.Owner)</label>
                    @Html.DisplayTextFor(n => n.Owner)
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@Html.DisplayNameFor(n => n.Rate)</label>
                    @Html.DisplayTextFor(n => n.Rate)
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@Html.DisplayNameFor(n => n.Active)</label>
                    @Html.CheckBoxFor(t => t.Active, new { @class = "checkbox" })                   
                    @Html.ValidationMessageFor(v => v.Active)
                </div>
                <div class="list-group">
                    @foreach (var stage in @Model.Stages)
                    {
                        <a href=@Url.Action("Stages", "Designer", new { title = stage }, null) class="list-group-item">@stage.Value</a>
                    }
                </div>
                <div class="btn-group">
                    <input type="submit" class="btn btn-primary" value="Сохранить" />
                    <a class="btn btn-default" href="@ViewBag.ReturnUrl">Назад</a>
                </div>
            }
        </div>
    </div>
</div>

