@model QuestGame.WebMVC.Areas.Game.Models.QuestViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-heading"><h2>Удалить квест?</h2></div>
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Cover)
            </dt>
            <dd>
                <img src=@Model.Cover alt="cover" />
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Date)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Date)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Owner)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Owner)
            </dd>
        </dl>
        <div class="btn-group">
            @Html.ActionLink("Удалить", "ConfirmDelete", "Quest", new { area = "Design", id = Model.Id }, new { @class = "btn btn btn-primary" })
            @Html.ActionLink("Назад", "Index", "Quest", new { area = "Design" }, new { @class = "btn btn-default" })
        </div>
    </div>
</div>
