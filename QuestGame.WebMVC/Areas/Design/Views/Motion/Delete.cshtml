@model QuestGame.WebMVC.Areas.Game.Models.MotionViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-heading"><h2>Удалить действие?</h2></div>
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
        <div class="btn-group">
            @Html.ActionLink("Удалить", "ConfirmDelete", "Motion", new { area = "Design", id = Model.Id, returnUrl = ViewBag.ReturnUrl }, new { @class = "btn btn btn-primary" })
            <a class="btn btn-default" href="@ViewBag.ReturnUrl">Назад</a>
        </div>
    </div>
</div>
