@model QuestGame.WebMVC.Areas.Game.Models.StageViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-heading"><h2>Удалить сцену?</h2></div>
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Cover)
            </dt>
            <dd>
                <img src=@Model.Cover alt="cover" height="100" width="100" />
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Body)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Body)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Point)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Point)
            </dd>
        </dl>
        <div class="btn-group">
            @Html.ActionLink("Удалить", "ConfirmDelete", "Stage", new { area = "Design", id = Model.Id, returnUrl = ViewBag.ReturnUrl }, new { @class = "btn btn btn-primary" })
            @*@Html.ActionLink("Назад", "Index", "Stage", new { area = "Design" }, new { @class = "btn btn-default" })*@
            <a class="btn btn-default" href="@ViewBag.ReturnUrl">Назад</a>
        </div>
    </div>
</div>
